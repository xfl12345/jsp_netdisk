<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xfl12345.jsp_netdisk.model.dao.AccountFileDao">

    <resultMap type="com.github.xfl12345.jsp_netdisk.model.pojo.database.AccountFile" id="AccountFileMap">
        <result property="accountId" column="account_id" jdbcType="INTEGER"/>
        <result property="fileId" column="file_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--以实体为条件，做统计-->
    <select id="countAll" resultType="java.lang.Long">
        select count(*) as c
        from jsp_netdisk.account_file
        <where>
            <if test="accountId != null">
                and account_id = #{accountId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
        </where>
    </select>

    <!--查询账号下所有文件里指定范围内的文件-->
    <select id="queryAllWithLimit" resultMap="AccountFileMap">
        select account_id,
               file_id
        from jsp_netdisk.account_file
        <where>
            <if test="accountFile.accountId != null">
                and account_id = #{accountFile.accountId}
            </if>
            <if test="accountFile.fileId != null">
                and file_id = #{accountFile.fileId}
            </if>
        </where>
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="AccountFileMap">
        select
        account_id, file_id
        from jsp_netdisk.account_file
        <where>
            <if test="accountId != null">
                and account_id = #{accountId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into jsp_netdisk.account_file(account_id, file_id)
        values (#{accountId}, #{fileId})
    </insert>

    <insert id="insertBatch">
        insert into jsp_netdisk.account_file(account_id, file_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.accountId}, #{entity.fileId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch">
        insert into jsp_netdisk.account_file(account_id, file_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.accountId}, #{entity.fileId})
        </foreach>
        on duplicate key update
        account_id = values(account_id) , file_id = values(file_id)
    </insert>

    <!--删除账号下所有文件-->
    <delete id="deleteAll">
        delete
        from jsp_netdisk.account_file
        <where>
            <!-- 防止出现双空导致整表清空 -->
            <if test="accountId == null and fileId == null">
                and 666 = 2333
            </if>
            <if test="accountId != null">
                and account_id = #{accountId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
        </where>
    </delete>

</mapper>

