<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="pers.xfl.jsp_netdisk.model.dao.DirFileDao">

    <resultMap type="pers.xfl.jsp_netdisk.model.pojo.database.DirFile" id="DirFileMap">
        <result property="directoryId" column="directory_id" jdbcType="INTEGER"/>
        <result property="fileId" column="file_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
<!--    <select id="queryById" resultMap="DirFileMap">-->
<!--        select directory_id,-->
<!--               file_id-->
<!--        from jsp_netdisk.dir_file-->
<!--        where = #{}-->
<!--    </select>-->

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DirFileMap">
        select directory_id,
               file_id
        from jsp_netdisk.dir_file
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DirFileMap">
        select
        directory_id, file_id
        from jsp_netdisk.dir_file
        <where>
            <if test="directoryId != null">
                and directory_id = #{directoryId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="" useGeneratedKeys="true">
        insert into jsp_netdisk.dir_file(directory_id, file_id)
        values (#{directoryId}, #{fileId})
    </insert>

    <insert id="insertBatch" keyProperty="" useGeneratedKeys="true">
        insert into jsp_netdisk.dir_file(directory_id, file_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.directoryId}, #{entity.fileId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="" useGeneratedKeys="true">
        insert into jsp_netdisk.dir_file(directory_id, file_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.directoryId}, #{entity.fileId})
        </foreach>
        on duplicate key update
        directory_id = values(directory_id) , file_id = values(file_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update jsp_netdisk.dir_file
        <set>
            <if test="directoryId != null">
                directory_id = #{directoryId},
            </if>
            <if test="fileId != null">
                file_id = #{fileId},
            </if>
        </set>
        where = #{}
    </update>

