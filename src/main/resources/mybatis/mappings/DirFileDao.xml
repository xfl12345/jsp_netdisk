<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.xfl12345.jsp_netdisk.model.dao.DirFileDao">

    <resultMap type="com.github.xfl12345.jsp_netdisk.model.pojo.database.DirFile" id="DirFileMap">
        <result property="directoryId" column="directory_id" jdbcType="INTEGER"/>
        <result property="fileId" column="file_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--以实体为条件，做统计-->
    <select id="countAll" resultType="java.lang.Long">
        select count(*) as c
        from jsp_netdisk.dir_file
        <where>
            <if test="directoryId != null">
                and directory_id = #{directoryId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
        </where>
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="DirFileMap">
        select
        directory_id, file_id
        from jsp_netdisk.dir_file
        <where>
            <if test="directoryId != null">
                and directory_id = #{directoryId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
        </where>
    </select>

    <!--通过实体作为筛选条件查询，支持分页-->
    <select id="queryAllWithLimit" resultMap="DirFileMap">
        select directory_id,
        file_id
        from jsp_netdisk.dir_file
        <where>
            <if test="dirFile.directoryId != null">
                and directory_id = #{dirFile.directoryId}
            </if>
            <if test="dirFile.fileId != null">
                and file_id = #{dirFile.fileId}
            </if>
        </where>
        limit #{offset}, #{limit}
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into jsp_netdisk.dir_file(directory_id, file_id)
        values (#{directoryId}, #{fileId})
    </insert>

    <insert id="insertBatch">
        insert into jsp_netdisk.dir_file(directory_id, file_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.directoryId}, #{entity.fileId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch">
        insert into jsp_netdisk.dir_file(directory_id, file_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.directoryId}, #{entity.fileId})
        </foreach>
        on duplicate key update
        directory_id = values(directory_id) , file_id = values(file_id)
    </insert>

    <!--删除-->
    <delete id="deleteAll">
        delete
        from jsp_netdisk.dir_file
        <where>
            <!-- 防止出现双空导致整表清空 -->
            <if test="directoryId == null and fileId == null">
                and 666 = 2333
            </if>
            <if test="directoryId != null">
                and directory_id = #{directoryId}
            </if>
            <if test="fileId != null">
                and file_id = #{fileId}
            </if>
        </where>
    </delete>


</mapper>

